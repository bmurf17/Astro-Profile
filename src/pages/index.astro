---
import AboutMe from "../components/Home Page/AboutMe.astro";
import Hero from "../components/Home Page/Hero.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import TypedTransition from "../components/TypedComponent";
import Navigation from "../components/Navbar.astro";
import Timeline from "../components/Timeline";
const pageTitle = "Home Page";

const v2Active = true;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/126624-medium.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    {
      v2Active ? (
        <div class="flex flex-col h-screen">
          <Navigation />
          {/* main  */}
          <div class="flex-1 flex flex-col gap-4 m-4">
            <div class="flex flex-col md:flex-row gap-4">
              <div class="flex items-center hover:rounded-2xl md:w-1/2 w-full">
                <div class="rounded-lg p-8 hover:cursor-pointer transition-all duration-300 ease-in-out bg-gray-300 flex justify-start items-center w-full hover:scale-95 hover:shadow-lg h-full">
                  <img class="h-28 md:w-28" src="/profile.png" />
                  <div class="ml-4">
                    <h3 class="text-xl text-blue-700 font-semibold">
                      Brendan Murphy
                    </h3>
                    <h5 class="text-md text-blue-600 font-semibold">
                      <TypedTransition client:load />
                    </h5>
                  </div>
                </div>
              </div>
              <div class="flex flex-col gap-4 md:w-1/2 w-full">
                <div class="rounded-lg p-8 hover:cursor-pointer transition-all duration-300 ease-in-out bg-gray-300 flex justify-start items-center w-full hover:scale-95 hover:shadow-lg">
                  Blog Post
                </div>
                <div class="rounded-lg p-8 hover:cursor-pointer transition-all duration-300 ease-in-out bg-gray-300 flex justify-start items-center w-full hover:scale-95 hover:shadow-lg">
                  Projects
                </div>
              </div>
            </div>
            <Timeline />
          </div>
          <div class="h-8">footer</div>
        </div>
      ) : (
        <BaseLayout pageTitle={pageTitle}>
          <div class="flex md:flex-row flex-col mb-4 md:mt-0 mt-4">
            <Hero />
            <AboutMe />
          </div>
        </BaseLayout>
      )
    }
  </body>
</html>
