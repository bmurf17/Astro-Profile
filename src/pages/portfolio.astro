---
import PortfolioPosts from "../components/Portfolio Page/PortfolioPosts";
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Portfolio";

const allPosts = await Astro.glob("../pages/posts/*.md");
const tags: string[] = [
  ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/126624-medium.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <BaseLayout pageTitle={pageTitle}>
      <div class="flex md:flex-row flex-col mb-4 md:mt-0 mt-4">
        <PortfolioPosts client:load posts={allPosts} tags={tags} />
      </div>
    </BaseLayout>
  </body>
</html>
