---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="md:flex md:gap-8 md:m-10 m-4">
    <div class="md:w-3/4">
      <p><em>{frontmatter.description}</em></p>
      <article class="prose lg:prose-xl">
        <slot />
      </article>
    </div>
    {
      frontmatter.bookOfTheMonth && (
        <div class="hidden md:block md:w-1/4">
          <div class="sticky top-24">
            <h3 class="text-xl font-bold mb-2">Book of the Month</h3>
            <img
              src={frontmatter.bookOfTheMonth.coverUrl}
              alt={frontmatter.bookOfTheMonth.title}
              class="w-full mb-2"
            />
            <h4 class="font-semibold">{frontmatter.bookOfTheMonth.title}</h4>
            <p class="text-sm mb-2">by {frontmatter.bookOfTheMonth.author}</p>
            <p class="text-sm">{frontmatter.bookOfTheMonth.description}</p>
          </div>
        </div>
      )
    }
  </div>
</BaseLayout>
